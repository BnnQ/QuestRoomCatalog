@using Homework.ViewModels.QuestRoom
@model IndexViewModel

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <style>
        #body {
            background-color: #292929;
        }

        .hoverable-image-container {
            overflow: hidden;
            position: relative;
            text-align: center;
            cursor: default;
        }

        .overlay {
            width: 100%;
            height: 100%;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            background-color: rgba(0, 0, 0, 0.5);
            -webkit-transition: all 0.4s ease-in-out;
            transition: all 0.4s ease-in-out;
        }

        .hoverable-image-container:hover .overlay {
            opacity: 1;
        }

        .overlay-content {
            overflow: hidden;
            line-height: 2rem;
            display: -webkit-box;
            display: -moz-box;
            -webkit-line-clamp: 3;
            line-clamp: 3;
            -webkit-box-orient: vertical;
            -moz-box-orient: vertical;
            text-overflow: ellipsis;
            padding: 10px;
        }

        .fs-5plus {
            font-size: 1.1rem !important;
        }
    </style>
}

<div id="body" class="container-fluid">
    <div class="container h-100 min-vh-100">
        <div class="row p-3">
            <div class="col-md-6 col-xl-4 pb-1">
                <button class="btn btn-outline-light w-100"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#filterOffcanvas">
                    Фильтры
                </button>
            </div>
            <div class="col-md-6 col-xl-4 pb-1" style="margin-left: auto">
                <form method="GET">
                    <div class="input-group rounded" style="outline: 1px solid white">
                        <input asp-for="SearchName"
                               placeholder="Поиск по названию"
                               class="form-control border-0 bg-transparent text-light" />
                        <input type="hidden" asp-for="SearchGenre" />
                        <input type="hidden" asp-for="SearchMinutesDuration" />
                        <input type="hidden" asp-for="SearchMinimumNumberOfPlayers" />
                        <input type="hidden" asp-for="SearchMinimumAge" />
                        <input type="hidden" asp-for="SearchMinimumDifficultyLevel" />
                        <input type="hidden" asp-for="SearchMaximumDifficultyLevel" />
                        <input type="hidden" asp-for="SearchCompanyName" />
                        <input type="hidden" asp-for="SearchRating" />
                        <input type="hidden" asp-for="SearchFearLevel" />
                        <button type="submit" class="btn btn-link text-primary">
                            <i class="fa fa-search text-light"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row p-3">
            @if (!Model.QuestRooms.Any())
            {
                <div class="col-12 h-100 justify-content-center">
                    <p class="text-center text-light fs-4">Квест комнат по заданным фильтрам не найдено</p>
                </div>
            }
            else
            {
                @foreach (QuestRoom questRoom in Model.QuestRooms)
                {
                    QuestRoomViewModel questRoomViewModel = new(questRoom);
                    <div class="col-md-6 col-xl-4 pb-3">
                        <div class="row mx-auto h-100 rounded" style="background-color: #212121">
                            <div class="row g-0">
                                <div class="col-12 hoverable-image-container">
                                    <img class="w-100 h-100" src="@questRoomViewModel.PathToLogo" />
                                    <div class="overlay d-flex align-items-center justify-content-center">
                                        <p class="overlay-content text-light">@questRoomViewModel.Description</p>
                                    </div>
                                </div>
                                <div class="col-12 text-light ps-3 pe-3 pt-2 fs-5">@questRoomViewModel.Name</div>
                                <div class="col-12 ps-3 pe-3 pt-2 text-warning">
                                    @Html.Raw(questRoomViewModel.RawRating)
                                </div>
                                <div class="col-12 fs-6 text-secondary ps-3 pe-3 pt-2">
                                    <div class="pt-1">
                                        <i class="fa fa-location-dot mt-0"></i>
                                        @questRoomViewModel.Address
                                    </div>
                                    <div class="pt-1">
                                        <i class="fa fa-film mt-0"></i>
                                        @questRoomViewModel.Genre
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 pb-3 row g-0 align-self-end align-items-end pt-1 ps-3 pe-3">
                                <div class="col-7 d-grid align-self-end">
                                    <p class="text-light fs-5 mb-2">@questRoomViewModel.Price</p>
                                    <a class="btn btn-outline-light text-center p-2" asp-action="Details" asp-route-id="@questRoomViewModel.Id">Подробнее</a>
                                </div>
                                <div class="col-5 g-0 text-white fs-6">
                                    <div class="col-12 text-nowrap text-end">@questRoomViewModel.MinimumAge</div>
                                    <div class="col-12 text-nowrap text-end fs-6">
                                        @Html.Raw(questRoomViewModel.RawDifficultyLevel)
                                    </div>
                                    <div class="col fs-6 text-end">
                                        <i class="fa fa-users"></i>
                                        @questRoomViewModel.NumberOfPlayers
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="offcanvas offcanvas-start"
         style="min-width: 150px; max-width: 300px"
         tabindex="-1"
         id="filterOffcanvas">
        <div class="offcanvas-header bg-danger text-light" style="max-height: 40px">
            <h5 class="offcanvas-title">@Model.NumberOfQuests</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body text-light" style="background-color: #242424">
            <form method="GET" class="d-flex flex-column w-100 h-100">
                <input type="hidden" asp-for="SearchName" />
                <div class="mb-3">
                    <label for="SearchGenre" class="form-label">Жанр</label>
                    <select asp-for="SearchGenre"
                            asp-items="Model.GenreSelectList"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="" selected>Любой</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="SearchMinutesDuration" class="form-label">Длительность (минут)</label>
                    <select asp-for="SearchMinutesDuration"
                            asp-items="Model.MinutesDurationSelectList"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="0">Любая</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="searchMinimumNumberOfPlayers" class="form-label">Минимальное кол-во игроков</label>
                    <select asp-for="SearchMinimumNumberOfPlayers"
                            asp-items="Model.MinimumNumberOfPlayersSelectList"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="0">Любое</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="searchMinimumAge" class="form-label">Минимальный возраст</label>
                    <select asp-for="SearchMinimumAge"
                            asp-items="Model.MinimumAgeSelectList"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="0">Любой</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Сложность</label>
                    <br />
                    <select asp-for="SearchMinimumDifficultyLevel"
                            class="form-select-sm"
                            style="width: 45%; background-color: #2e2e2e; color: #808080">
                        <option value="0" selected>Любая</option>
                        @for (byte i = Model.MinimumDifficultyLevel; i <= Model.MaximumDifficultyLevel; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    &#8212;
                    <select asp-for="SearchMaximumDifficultyLevel"
                            class="form-select-sm"
                            style="width: 45%; background-color: #2e2e2e; color: #808080">
                        <option value="0" selected>Любая</option>
                        @for (byte i = Model.MinimumDifficultyLevel; i <= Model.MaximumDifficultyLevel; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="searchCompanyName" class="form-label">Компания</label>
                    <select asp-for="SearchCompanyName"
                            asp-items="Model.CompanyNameSelectList"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="">Любая</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="searchRating" class="form-label">Рейтинг</label>
                    <select asp-for="SearchRating"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="0" selected>Любой</option>
                        @for (byte i = Model.MinimumRating; i <= Model.MaximumRating; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="mb-5">
                    <label for="searchFearLevel" class="form-label">Страх</label>
                    <select asp-for="SearchFearLevel"
                            class="form-select"
                            style="background-color: #2e2e2e; color: #808080">
                        <option value="0" selected>Любой</option>
                        @for (byte i = Model.MinimumFearLevel; i <= Model.MaximumFearLevel; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="mb-3 d-flex flex-column justify-content-end gap-3 h-100">
                    <button type="submit" class="btn btn-outline-light flex-grow-0">Найти</button>
                    <a asp-action="Index" class="btn btn-outline-light flex-grow-0">Сбросить фильтры</a>
                </div>
            </form>
        </div>
    </div>
</div>